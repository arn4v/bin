function sync() {
    if [ -d .repo ]; then
        time repo sync -f -c --no-clone-bundle -j32 --no-tags $@
    else
        cd ${HOME}/$1; time repo sync -f -c --no-clone-bundle -j32 --no-tags
    fi
}

