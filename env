#!/bin/bash
#------------------------------------///
# CUSTOM BASHRC SHIT
#------------------------------------///

black='\e[0;30m'
blue='\e[0;34m'
green='\e[0;32m'
cyan='\e[0;36m'
red='\e[0;31m'
purple='\e[0;35m'
brown='\e[0;33m'
lightgray='\e[0;37m'
darkgray='\e[1;30m'
lightblue='\e[1;34m'
lightgreen='\e[1;32m'
lightcyan='\e[1;36m'
lightred='\e[1;31m'
lightpurple='\e[1;35m'
yellow='\e[1;33m'
white='\e[1;37m'
nc='\e[0m'

export USE_CCACHE=1
PATH=~/bin:$PATH
source ${HOME}/.afhcreds
alias sync='time repo sync -f -c --no-clone-bundle -j32 --no-tags'
export TZ=Asia/Kolkata

upinfo ()
{
echo -ne "${yellow}$HOSTNAME ${lightred}uptime is ${lightblue} \t ";uptime | awk /'up/ {print $3,$4,$5,$6,$7,$8,$9,$10}'
}
#------------------------------------------////
# System Information:
#------------------------------------------////
clear
echo -e "${LIGHTGRAY}";figlet "ARN4V";
echo ""
echo -ne "${lightred}Today is:\t\t${lightblue}" `date`; echo ""
echo -e "${lightred}Kernel Information: \t${lightblue}" `uname -smr`
echo -ne "${cyan}";upinfo;echo ""

#------------------------------------------////
# FUNCTIONS:
#------------------------------------------////

function dup() {
drive upload -f $1 -p 0B2HoiwlM3QDxOGc0SE9jLUYwdTA --share
}

function build() {
if [ $3 == "sync" ];
then
make_arg1=$4
make_arg2=$5
else
make_arg1=$3
make_arg2=$4
fi
sourceroot="${HOME}/"$1""
cd $sourceroot
if [ $3 == "sync" ];
then
sync && sync
fi
source build/envsetup.sh
breakfast $2
if [ ! $make_arg1 == "" ] && [ $make_arg2 == "" ];
then
time make -j20 $make_arg1;
fi
dup $OUT/*"$2"*.zip
}

function createrepo() {
curl -X POST -H "Authorization: token "$token"" -d  '{ "name": "'"$2"'"}' "https://api.github.com/orgs/"$1"/repos"
}

function forkrmt() {
git remote add origin $(git remote -v | grep lineagefork | awk '{print $2}' | sed -e 's|git://github.com/|git@github.com:|' | uniq)
}

#------------------------------------------////
# ALIAS:
#------------------------------------------////

# sync
alias sync='time repo sync -f -c --no-clone-bundle -j32 --no-tags'

# git
alias gresh='git reset --hard HEAD^'
alias gcamd='git commit --amend'
alias gchp='git cherry-pick'

# AFH
alias afh='ncftpput -u $afhusername -p $afhpassword uploads.androidfilehost.com . $1'
