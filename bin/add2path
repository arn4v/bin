#!/usr/bin/env zsh

base_dir="$HOME/.bin"

for folder in $(ls $base_dir); do
    if [[ -d "$base_dir/$folder" ]]; then
        if [[ -d "$base_dir/$folder/bin" ]]; then
            export PATH=$PATH:$base_dir/$folder/bin
        else
            export PATH=$PATH:$base_dir/$folder
        fi
    fi
done
