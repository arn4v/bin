#!/usr/bin/env zsh

base_dir="$HOME/.bin"

for folder in $(ls $base_dir); do
    if [[ -d "$base_dir/$folder" ]]; then
        if [[ -d "$base_dir/$folder/bin" ]]; then
            export PATH="$base_dir/$folder/bin:$PATH"
        else
            export PATH="$base_dir/$folder:$PATH"
        fi
    fi
done
